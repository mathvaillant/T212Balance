{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "t212balance",
  "version": "0.1.0",
  "identifier": "com.mattvaillant.t212balance",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "t212balance",
        "width": 250,
        "height": 180,
        "decorations": false,
        "alwaysOnTop": true,
        "fullscreen": false,
        "resizable": false,
        "visible": true,
        "hiddenTitle": true,
        "transparent": true,
        "focus": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
